doctype html
html(lang="ru-RU")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="initial-scale=1.0, width=device-width")
		title Team Dream
		link(href="fonts/segoe.css" rel='stylesheet' type='text/css')
		// стили для qtip2
		link(rel="stylesheet",href="css/vendor/jquery.qtip.min.css")
		link(rel="stylesheet",href="css/main.css")
		
	body
		.wrapper
			.block-left
				.block-left__title Генератор водяных знаков
				.block-left__main
					.block-left__wrapper-img
						#draggable.block-left__img
							//- поправил Роман
							img(src='img/bg.jpg' alt='').watermark
			form.block-right
				.block-right__title Настройки
				.block-right__form
					-var items=['Исходное изображение','Водяной знак']
						each item, indx in items
							-var i=1
							-var count=indx+i
								label.block-right__lbl=item
								label.block-right__fileupload
										input.fileupload(id="fileupload-"+count type="file" name="files[]" placeholder="Image.jpg" data-url="php/" multiple disabled=((count == 2) ? true : false))
										input.fileurl(type="hidden" name="fileurl" placeholder="Image.jpg")
									input(class="block-right__input block-right__input_" + count type="text" name="img-name" readonly value="image.jpg")
				.block-right__form
					.block-right__form-title Положение
					.block-right-place
						.block-right-place__table
							-for (var i=0; i<9; i++)
								label.block-right-place__lbl
									input.block-right__radio(type="radio" name="name" class="block-right__radio_"+i checked=((i==0)? true : false) disabled=true)
									.block-right__radio-elem
						.block-right-place__left
							-var items=['x','y']
								each item, indx in items
									label(for="spinner_" + indx)=item
										input(id='spinner_' + indx name='value' readonly)
				.block-right__form
					.block-right__form-title.sidebar Прозрачность
					#slider-range.slider-elem
				.block-right__last
					.block-right__btn
						button.btn.btn__clear(type='reset' disabled) Сброс
						button.btn.btn__save(type='submit' disabled) Скачать
		.footer © 2014, Это мой сайт, пожалуйста, не копируйте и не воруйте его
		script(type="text/javascript" src="bower/jquery/jquery.min.js")
		script(type="text/javascript" src="js/plugins/jquery-ui.min.js")
		// для загрузки картинок
		script(type="text/javascript" src="js/plugins/jquery.fileupload.js")
		script(type="text/javascript" src="js/plugins/jquery.iframe-transport.js")
		script(type="text/javascript" src="js/plugins/jquery.qtip.min.js")
		script(type="text/javascript" src="js/plugins/jquery.ui.widget.js")
		script(type="text/javascript" src="js/loadimages.js")
		// END для загрузки кртинок
		script(type="text/javascript" src="js/position.js")
		script(type="text/javascript" src="js/main.js")